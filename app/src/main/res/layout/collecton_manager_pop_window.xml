<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/conllection_pop_dele"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除"
        android:padding="10dp"/>
    <ImageView
        android:id="@+id/colection_pop_dele_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/ic_pop_dele"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/collection_pop_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/conllection_pop_dele"
        android:padding="10dp"
        android:text="下载"/>

    <ImageView
        android:id="@+id/ic_collection_pop_download_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/ic_pop_download"
        android:layout_alignParentRight="true"
        android:layout_below="@id/colection_pop_dele_iv"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"/>

</RelativeLayout>