<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >


    <TextView
        android:id="@+id/dialog_loading_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请稍等"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <ProgressBar
        android:id="@+id/dialog_loading_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_loading_title"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="8dp"/>
    <TextView
        android:id="@+id/dialog_loading_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="数据正在请求中..."
        android:layout_toRightOf="@id/dialog_loading_pro"
        android:layout_below="@id/dialog_loading_title"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"/>
</RelativeLayout>
