<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff">

                <LinearLayout
                    android:id="@+id/unknow_title_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/unknow_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="详情"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_vertical"
                        android:textSize="20sp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/unknow_head_word"
                    android:layout_below="@id/unknow_title_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="so"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp" />


                <TextView
                    android:id="@+id/unknow_fa_yin_uk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/unknow_head_word"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:text="/sou/"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/unknow_fa_yin_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/unknow_head_word"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/unknow_fa_yin_uk"
                    android:textSize="16sp"
                    android:text="/sou/"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/unknow_fa_yin_lound"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_laba"
                    android:layout_toRightOf="@id/unknow_fa_yin_us"
                    android:layout_below="@id/unknow_head_word"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/unknow_adv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="adv."
                    android:layout_below="@id/unknow_fa_yin_uk"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/unknow_adv_words"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="如此,这么确实"
                    android:layout_below="@id/unknow_fa_yin_uk"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/unknow_adv"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/unknow_adj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="n."
                    android:layout_below="@id/unknow_adv"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/unknow_adj_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="真的,事实如此,整齐的"
                    android:layout_below="@id/unknow_adv"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/unknow_adj"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/unknow_head_word_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4d4d4d4d"
                    android:layout_below="@id/unknow_adj_word"
                    android:layout_marginTop="30dp" />

                <TextView
                    android:id="@+id/unknow_liju_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图文例句"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_below="@id/unknow_head_word_line"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/unknow_li_ju_english"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I am so latel"
                    android:layout_below="@id/unknow_liju_head"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp" />

                <ImageView
                    android:id="@+id/unknow_li_ju_lound"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_laba"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/unknow_head_word_line"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:id="@+id/unknow_li_ju_chinese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我太吃到了"
                    android:layout_below="@id/unknow_li_ju_english"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/unknow_li_ju_pic"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="#000"
                    android:layout_below="@id/unknow_li_ju_chinese"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp" />

                <View
                    android:id="@+id/unknow_li_ju_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4d4d4d4d"
                    android:layout_below="@id/unknow_li_ju_pic"
                    android:layout_marginTop="30dp" />


                <TextView
                    android:id="@+id/unknow_trans_other_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="英文释义"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_below="@id/unknow_li_ju_line"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/unknow_trans_other_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1."
                    android:layout_below="@id/unknow_trans_other_head"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/unknow_trans_other_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="to suach a great degreee"
                    android:layout_below="@id/unknow_trans_other_head"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/unknow_trans_other_num"
                    android:layout_marginLeft="5dp" />


                <View
                    android:id="@+id/unknow_phrases_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4d4d4d4d"
                    android:layout_below="@id/unknow_trans_other_word"
                    android:layout_marginTop="30dp" />

                <TextView
                    android:id="@+id/unknow_phreses_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="短语"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/unknow_phrases_line" />

                <TextView
                    android:id="@+id/unknow_phreses_english"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="so as to do something"
                    android:layout_below="@id/unknow_phreses_title"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#6F93F0" />

                <TextView
                    android:id="@+id/unknow_phrases_chinese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="方便...以便"
                    android:layout_below="@id/unknow_phreses_english"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp" />


                <View
                    android:id="@+id/unknow_jinyici_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4d4d4d4d"
                    android:layout_below="@id/unknow_phrases_chinese"
                    android:layout_marginTop="30dp" />

                <TextView
                    android:id="@+id/unknow_jinyici_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="近义词"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/unknow_jinyici_line" />

                <TextView
                    android:id="@+id/unknow_jinyici_word_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="stipulan"
                    android:textColor="#6F93F0"
                    android:layout_below="@id/unknow_jinyici_title"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_below="@id/unknow_jinyici_word_1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/unknow_zhan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="斩"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:background="@drawable/selector_zhan" />

                    <TextView
                        android:id="@+id/unknow_resolve"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="继续答题"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:background="@drawable/selector_resolve" />


                </LinearLayout>
            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>
</layout>