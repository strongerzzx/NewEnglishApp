<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameWinActivity">

    <FrameLayout
        android:id="@+id/winner_words_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/ic_winner_bg"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:padding="20dp"
        android:background="@drawable/shape_win_game_bg">

        <TextView
            android:id="@+id/winner_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="恭喜兔子先生赢得比赛"
            android:textColor="#fff"
            android:textSize="20sp"
            android:padding="10dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="您可以选择"
            android:textColor="#fff"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/winner_see_words"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查看比赛单词"
            android:textColor="#fff"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_winner_btn"
            android:gravity="center"/>

        <TextView
            android:id="@+id/winner_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="在玩一次"
            android:textColor="#fff"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_winner_btn"
            android:gravity="center"/>

        <TextView
            android:id="@+id/winner_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="退出"
            android:textColor="#fff"
            android:padding="10dp"
            android:background="@drawable/selector_winner_btn"
            android:layout_marginTop="20dp"
            android:gravity="center"/>

    </LinearLayout>

</RelativeLayout>